{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
				"*.c",
				"MLX42/build/libmlx42.a",
				"-O3",
				"-Iinclude",
				"-ldl",
				"-lglfw",
				"-pthread",
				"-lm",
                "/MLX/a.out mandelbrot"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
	],
	"configurations": [
	{
		"name": "(gdb) Iniciar",
		"type": "cppdbg",
		"request": "launch",
		"program": "/MLX/a.out",
		"args": [],
		"stopAtEntry": false,
		"cwd": "${fileDirname}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
			{
				"description": "Habilitar a reformatação automática para gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			},
			{
				"description": "Definir Tipo de Desmontagem como Intel",
				"text": "-gdb-set disassembly-flavor intel",
				"ignoreFailures": true
			}
		]
	}
	],
}
